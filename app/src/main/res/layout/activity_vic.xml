<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.VicActivity">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_status"
        android:layout_alignParentTop="true"
        android:background="#27f1"
        android:text="Status Request will be shown here"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textColor="#f5f5"
        android:textStyle="bold"
        android:visibility="invisible"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_below="@id/tv_status"
        android:id="@+id/tv_titt"
        android:text="Generate Help Request"
        />
    <EditText
        android:layout_margin="10dp"
        android:layout_below="@id/tv_titt"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_name"
        android:hint="Name"

        />
    <EditText
        android:layout_margin="10dp"
        android:layout_below="@id/et_name"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_phone"
        android:hint="Phone"
        android:inputType="phone"
        android:digits="0123456789+"

        />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_category"

                android:entries="@array/categories"
                android:layout_below="@id/et_phone">
            </Spinner>
    <EditText
        android:layout_margin="10dp"
        android:layout_below="@id/spinner_category"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_message"
        android:hint="Type Message here, include your requirements and assistance required"
        android:lines="8"
        android:scrollbars="vertical"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other Relevant details like location, etc will be recorded and sent with the request"
        android:id="@+id/tv_disclaimer"
        android:layout_below="@id/et_message"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_disclaimer"
                android:text="Emergency(Call)"
                android:textColor="#000"
                android:layout_margin="20dp"
                android:textSize="18sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:id="@+id/btn_call"
                android:background="#af00"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_disclaimer"
                android:text="Emergency(SMS)"
                android:textColor="#000"
                android:layout_margin="20dp"
                android:textSize="18sp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/btn_sms"
                android:background="#af00"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_call"
        android:text="Send"
        android:textColor="#fff"
        android:layout_margin="20dp"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_send"
        android:background="#0000"/>

            <ProgressBar
                android:id="@+id/progressBar_vic"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/btn_call"
                android:layout_alignTop="@+id/et_name"
                android:layout_marginStart="65dp"
                android:layout_marginTop="-41dp"
                android:visibility="invisible"/>

                <!--android:layout_alignStart="@id/tv_titt"-->
                <!--android:layout_alignParentEnd="true"-->
                 />
        </RelativeLayout>

</ScrollView>
</RelativeLayout>