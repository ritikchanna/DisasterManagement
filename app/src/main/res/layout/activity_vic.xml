<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VicActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_status"
        android:layout_alignParentTop="true"
        android:background="#27f1"
        android:text="Status Request will be shown here"
        android:textSize="24sp"
        android:textColor="#f5f5"
        android:textStyle="bold"
        android:visibility="invisible"/>
    <EditText
        android:layout_margin="25dp"
        android:layout_below="@id/tv_status"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_phone"
        android:hint="Phone"
        android:inputType="phone"
        android:digits="0123456789+"
        />
    <EditText
        android:layout_margin="25dp"
        android:layout_below="@id/et_phone"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_message"
        android:hint="Phone"
        android:lines="8"
        android:scrollbars="vertical"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other Relevant details like location, etc will be recorded and sent with the request"
        android:id="@+id/tv_disclaimer"
        android:layout_below="@id/et_message"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_disclaimer"
        android:text="Send"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_send"
        android:background="#0000"/>

</RelativeLayout>